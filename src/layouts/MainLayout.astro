---
// layouts import
import MainHead from "./MainHead.astro";
import Sidebar from "../components/Sidebar.astro";


// astro props
interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
    <MainHead {title} />
    <body>
		
		<div class="container-fluid p-0">
			<button id="ham-menu" class="btn btn-primary"><i class="fas fa-bars"></i></button><!-- Hambergur Menu -->

			<div class="row no-gutters">
				<div class="col-lg-3" id="left-container">
					<Sidebar />
				</div>
				<!-- left-container -->

				<div class="col-lg-9" id="right-container">
					<div class="content-wrapper">
						<slot />
					</div>
					<!-- content-wrapper -->
				</div>
				<!-- right-container -->
			</div>
			<!-- row -->
		</div>
		<!-- container-fluid -->
		
	</body>
</html>